<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.gluonix.googleinapppurchase.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105"
        android:id="@+id/textView2"
        android:layout_above="@+id/pay_premium"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />

    <Button
        android:id="@+id/pay_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Subscription"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="270dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/pay_activity"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/pay_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Activity"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="124dp"
        android:layout_above="@+id/view_activity"
        android:layout_alignRight="@+id/view_activity"
        android:layout_alignEnd="@+id/view_activity"
        android:layout_marginBottom="52dp" />

    <Button
        android:id="@+id/view_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Activity"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="194dp"
        android:layout_marginBottom="71dp"
        android:layout_alignBottom="@+id/view_premium"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/view_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premium Section"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="338dp"
        android:layout_marginBottom="131dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
